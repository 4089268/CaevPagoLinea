@using AspNetCore.ReCaptcha
@model CAEV.PagoLinea.Models.ValidatePaymentViewModel
@{
    ViewData["Title"] = "Pago en Linea";
    Layout = "_GuestLayout";
}

@switch(Model.PaymentStatus){
    case ValidatePaymentViewModel.PaymentStatuses.Success:
        <partial name="./Partials/PaymentSuccess" />
        break;

    case ValidatePaymentViewModel.PaymentStatuses.Pending:
        <partial name="./Partials/PaymentPending" />
        break;
    default:
        <partial name="./Partials/PaymentFail" />
        break;
}

<div class="container mt-4">
    <div class="card datos shadow mx-auto" style="max-width: 480px;">
        <div class="card-body d-flex flex-column align-items-stretch">
            <div class="mb-3">
                <label class="form-label">Transaccion ID</label>
                <input class="form-control" type="text" disabled value="@Model.TransactionId" />
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha</label>
                <input class="form-control" type="text" disabled value="@Model.Date.ToLongDateString()" />
            </div>
            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input class="form-control" type="text" disabled value="@Model.UserName" />
            </div>
            <div class="mb-3">
                <label class="form-label">Cuenta</label>
                <input class="form-control" type="text" disabled value="@Model.UserAccount"/>
            </div>
            <div class="mb-3">
                <label class="form-label">Importe</label>
                <input class="form-control" type="text" disabled value="@Model.AmmountFormat"/>
            </div>
            <div class="mb-3">
                <label class="form-label">Estatus</label>
                <input class="form-control" type="text" disabled value="@Model.Status" />
            </div>
            <div class="d-flex justify-content-center">
                <a asp-action="Index" asp-controller="Invoice" class="btn btn-secondary px-4">Continuar</a>
            </div>
        </div>
    </div>

</div>