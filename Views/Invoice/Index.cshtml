@{
    ViewData["Title"] = "Pago en Linea";
    Layout = "_GuestLayout";
}
@model CAEV.PagoLinea.Models.InvoiceRequest

<div class=" container text-center">
    <h1 class="display-5">Pago en Linea</h1>
</div>

<div class="container text-center">
    <p style="max-width: 44rem; margin: 0 auto ;">Ten tu recibo a la mano para realizar tu pago. Por favor, asegúrate de tener los detalles correctos antes de proceder con el pago de tu factura.</p>
</div>

<div class="container mt-4">

    <div class="stepwizard">
        <div class="stepwizard-step">
            <button type="button" class="btn btn-primary btn-circle" disabled>1</button>
            <p>Consulta tu saldo</p>
        </div>
        
        <div class="stepwizard-step">
            <button type="button" class="btn btn-secondary btn-circle" disabled>2</button>
            <p>Comprueba tus datos</p>
        </div>

        <div class="stepwizard-step">
            <button type="button" class="btn btn-secondary btn-circle" disabled>3</button>
            <p>Realiza tu pago</p>
        </div>
    </div>
    
    <div class="card datos shadow">
        <div class="card-header">
            1.- Consulta tu saldo
        </div>
        <div class="card-body">
            @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage)){
                <div class="alert alert-warning" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            @using (Html.BeginForm("Index", "Invoice", FormMethod.Post)){
                <div class="mb-3">
                    <label for="localidad" class="form-label">Localidad</label>
                    @Html.TextBoxFor(model => model.Localidad, new { @class = "form-control", @placeholder = "000", @id="localidad" })
                    @Html.ValidationMessageFor(model => model.Localidad)
                </div>
                <div class="mb-3">
                    <label for="cuenta" class="form-label">Cuenta</label>
                    @Html.TextBoxFor(model => model.Cuenta, new { @class = "form-control", @placeholder = "000", @id="cuenta" })
                    @Html.ValidationMessageFor(model => model.Cuenta)
                </div>
                <div class="mb-3">
                    <label for="sector" class="form-label">Sector</label>
                    @Html.TextBoxFor(model => model.Sector, new { @class = "form-control", @placeholder = "000", @id="sector" })
                    @Html.ValidationMessageFor(model => model.Sector)
                </div>
                <div class="d-flex justify-content-center">
                    <input class="btn btn-primary btn-lg btn-success" type="submit" value="Consultar Cuenta" />
                </div>
            }
        </div>
    </div>

</div>