@{
    ViewData["Title"] = "Pagos Realizados";
}
@model PaymentsViewModel

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">
                <a asp-action="Dashboard" asp-controller="Auth">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Pagos Realizados
            </li>
        </ol>
    </nav>
</div>

<div class="container my-1">
    <h1 class="text-center text-uppercase" style="font-size: 1.75rem;">Pagos Realizados</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4 d-flex align-items-center pt-4">
            <a href="#" class="btn btn-success btn-sm mr-1 me-1">
                <div class="d-inline-block me-1 mr-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-excel-fill" viewBox="0 0 16 16">
                    <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M5.884 6.68 8 9.219l2.116-2.54a.5.5 0 1 1 .768.641L8.651 10l2.233 2.68a.5.5 0 0 1-.768.64L8 10.781l-2.116 2.54a.5.5 0 0 1-.768-.641L7.349 10 5.116 7.32a.5.5 0 1 1 .768-.64"/>
                    </svg>
                </div>
                Action 1
            </a>
            <a asp-action="UploadPayments" asp-controller="Payments" class="btn btn-primary btn-sm mr-1 me-1">
                <div class="d-inline-block me-1 mr-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"/>
                        <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708z"/>
                    </svg>
                </div>
                Cargar Pagos (CSV)
            </a>
        </div>

        <div class="col-md-8">
            <form asp-action="Index" asp-controller="Payments" method="get">
                <div class="form-row d-flex align-items-end justify-content-end">
                    <div class="form-group px-1">
                        <label for="OficinaId">Oficina</label>
                        @Html.DropDownList("OficinaId", new SelectList(Model.Oficinas, "Id", "Oficina"), new {@class = "form-control"})
                    </div>
                    <div class="form-group px-1" style="width: 11rem;">
                        <label for="startDate">Fecha Inicio</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group px-1" style="width: 11rem;">
                        <label for="endDate">Fecha Fin</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="form-group px-1">
                        <button type="submit" class="btn btn-primary px-4">Filtrar</button>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mt-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Oficina</th>
                        <th>Cuenta</th>
                        <th>Razon Social</th>
                        <th>Importe</th>
                        <th>AF</th>
                        <th>MF</th>
                        <th>Fecha</th>
                        <th>Estatus</th>
                        <th>Actualizar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var resume in Model.PaymentResumes)
                    {
                        <tr>
                            <td>@resume.Oficina</td>
                            <td>@resume.IdCuenta</td>
                            <td>@resume.RazonSocial</td>
                            <td>@resume.TotalImporteCurrency</td>
                            <td>@resume.Af</td>
                            <td>@resume.Mf</td>
                            <td>@resume.Fecha.ToUniversalTime()</td>
                            <td>@resume.Estatus</td>
                            <td>
                                <a type="button" asp-action="ShowPayment" asp-controller="Payments" asp-route-paymentId="@resume.Id" class="btn btn-primary btn-sm rounded">Detalle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#OficinaId').change(function () {
                $('form').submit();
            });
        });
    </script>
}