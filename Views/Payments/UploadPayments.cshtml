@{
    ViewData["Title"] = "Pagos Realizados";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">
                <a asp-action="Dashboard" asp-controller="Auth">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Pagos Realizados
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Cargar Pagos
            </li>
        </ol>
    </nav>
</div>

<div class="container my-1">
    <h1 class="text-center text-uppercase" style="font-size: 1.75rem;">Cargar Pagos</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <form asp-action="Index" asp-controller="Payments" method="get">
                <div class="form-row">
                    
                    <div class="form-group col-4 px-1">
                        <label for="startDate">Fecha Inicio</label>
                        <input type="date" class="form-control" id="startDate" name="startDate"/>
                    </div>

                    <div class="form-group col-4 px-1">
                        <label for="endDate">Fecha Fin</label>
                        <input type="date" class="form-control" id="endDate" name="endDate"/>
                    </div>

                    <div class="form-group px-1 col-12 mb-2">
                        <label for="paymentFile" class="form-label">Default file input example</label>
                        <input class="form-control" type="file" iid="paymentFile" name="paymentFile">
                    </div>

                    <div class="form-group px-1">
                        <button type="submit" class="btn btn-primary px-4">Cargar Pagos</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            
        });
    </script>
}